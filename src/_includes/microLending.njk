---
layout: layouts/base.njk
---
{%- from "components/component.njk" import component -%}

<div class="flex flex-col items-center">
    <div class="flex mt-8 md:mt-14 justify-center">
        <p class="text-3xl md:text-5xl lg:text-6xl xl:text-7xl text-pud_green font-bold">{{title}}</p>
    </div>
    <div class="flex mt-4 text-center justify-center text-sm md:text-xl md:mt-8 text-black">
        {{content | safe}}
    </div>
    <div class="flex w-1/4 sm:w-1/5 md:w-32 justify-center rounded-full border-2 mt-8 bg-pud_green">
		<a class="py-2 px-2 text-white" href="{{ applyPageLink }}">{{ applyButtonText }}</a>
    </div> 
</div>

<div class="mx-4 md:mx-8 lg:mx-16">
    {% set quotePath = 'src/programs/microLending/popoutQuote.md' %}
    {% set args = {'data': (quotePath | getVarsFromMd), 'content': (quotePath | getRenderedContentFromMd)} %}
    {{ component('partials/popoutQuoteWithPicture.njk', args) }}
</div>

<div class="md:flex md:flex-row-reverse md:justify-center md:mx-8 lg:mx-16">
    <div class="md:ml-2 md:w-1/2">
        {% set applyCardPath = 'src/programs/microLending/howToApply.md' %}
        {% set args = {'data': (applyCardPath | getVarsFromMd), 'content': (applyCardPath | getRenderedContentFromMd)} %}
        {{ args['data'] | push('buttonLink', 'apply/index.html') }}
        {{ component('partials/pictureAboveCard.njk', args) }}
    </div>
    <div class="md:flex md:flex-col md:flex-grow-0 md:mr-2 md:w-1/2">
        {% set accordionPath = 'src/programs/microLending/accordion.md' %}
        {% set accordionCollection = collections.microLendingAccordion %}
        {% set args = {'data': (accordionPath | getVarsFromMd), 'content': (accordionPath | getRenderedContentFromMd), 'items': accordionCollection} %}
        {{ args['data'] | push('backgroundColor', 'bg-red-200') }}
        {{ args['data'] | push('secondaryColor', 'bg-red-50') }}
        {{ component('partials/accordion.njk', args) }}
    </div>
</div>

{% set outcomesPath = 'src/programs/microLending/programOutcomes.md' %}
{% set outcomesGridCollection = collections.microLendingProgramOutcomesImageGrid %}
{% set args = {'data': (outcomesPath | getVarsFromMd), 'content': (outcomesPath | getRenderedContentFromMd), 'items': outcomesGridCollection} %}
{{ component('partials/imageGrid.njk', args) }}

{% set partnersPath = 'src/programs/partners.md' %}
{% set partnersGridCollection = collections.partnersImageGrid %}
{% set args = {'data': (partnersPath | getVarsFromMd), 'content': (partnersPath | getRenderedContentFromMd), 'items': partnersGridCollection} %}
{{ component('partials/imageGrid.njk', args) }}

