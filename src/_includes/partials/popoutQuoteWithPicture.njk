<section class="py-20 px-10 flex flex-col items-center justify-center  md:flex-row">
    <img class="z-10 flex shadow-2xl rounded-md md:w-2/3 md:ml-auto lg:mr-16 lg:w-1/2" src="{{ params.data.imagePath }}">
    <div class="md:w-2/3 shadow-lg rounded-md border-2 border-gray-100 px-10 py-10 md:h-2/5 md:absolute md:left-20 md:w-1/2 lg:w-1/2 lg:ml-0 z-10 bg-white">
        {% if params.data.quoteHeader %}
            <h1 class="text-2xl leading-relaxed tracking-wide mb-5">{{ params.data.quoteHeader }}</h1>
        {% endif %}
        <h1 class="text-base self-center">{{params.content | safe }}</h1>
    </div>
</section>
