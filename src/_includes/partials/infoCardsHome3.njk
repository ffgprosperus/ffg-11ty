<section class="w-full flex flex-col bg-gradient-to-b from-white via-pud_gradient_lg1 via-pud_gradient_lg2 via-pud_gradient_lg1 to-white pb-36">
  {% set args = {'data': {'headerText': 'Programs'} } %}
  {{ component('partials/sectionHeader.njk', args) }}

  <h1 class="self-center text-3xl font-medium lg:px-28 py-9 text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Consequat ut sagittis ac purus turpis. In sit tortor etiam interdum donec libero at.</h1>
  <div class="py-10 space-y-6 flex flex-col justify-items-center text-center lg:flex-row lg:space-y-0 ">
    {%- for card in collections.infoCardHome | sortByOrder -%}
      <div class="self-center shadow-xl lg:self-auto transition duration-800 group mx-7 px-12 py-4 pt-6 flex flex-col bg-white bg-opacity-70  rounded-lg hover:shadow-2xl d md:w-3/5 lg:w-2/5">
        
    
        
        <img class="self-center" width=150 src={{ card.data.icon | safe }}>
        
        <h4 class="self-center  text-2xl mb-2 z-30 font-medium text-pud_green">{{card.data.title}}</h4>
        <p class="self-center text-gray-500">{{card.templateContent | safe}}<p>
        <div class="transition duration-500 opacity-0 group-hover:opacity-100 mt-5 ">
            {% set args = {'data': {'buttonText': 'Learn More', 'buttonLink': card.data.link } } %}
            {{ component('partials/button.njk', args) }}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>
