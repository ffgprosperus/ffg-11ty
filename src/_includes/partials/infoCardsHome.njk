<section class="p-16 mx-auto flex flex-col bg-white ">
  {% set args = {'data': {'headerText': 'Programs'} } %}
  {{ component('partials/sectionHeader.njk', args) }}

  <h1 class="self-center text-3xl font-medium lg:px-28 py-9 text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Consequat ut sagittis ac purus turpis. In sit tortor etiam interdum donec libero at.</h1>
  <div class="py-10 space-y-6 flex flex-col justify-items-center text-center text-black lg:flex-row lg:space-y-0 ">
    {%- for card in collections.infoCardHome | sortByOrder -%}
      <div class="self-center lg:self-auto transition duration-800 group mx-7 px-12 py-4 pt-6 flex flex-col {{ card.data.bgColor }} rounded hover:shadow-md md:w-3/5 lg:w-2/5">
        <div class="relative">
        <div class="absolute px-12 py-12 -top-6 -left-12  md:left-7 lg:-left-12 z-40 rounded-full bg-white opacity-40"></div>
        <h4 class="self-center  text-2xl mb-2 z-30 font-medium">{{card.data.title}}</h4>
        </div>
        <span class="self-center mb-5 group-hover:text-pud_green"><img width=180 src={{ card.data.icon | safe }}></span>
        <p class="self-center">{{card.templateContent | safe}}<p>
        <div class="transition duration-500 opacity-0 group-hover:opacity-100 mt-5">
            {% set args = {'data': {'buttonText': 'Learn More', 'buttonLink': card.data.link } } %}
            {{ component('partials/button.njk', args) }}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>
