{%- from "components/component.njk" import component -%}

<div class="p-8 mx-auto flex flex-col bg-white justify-items-center">
  {% set args = {'data': {'headerText': params.data.title} } %}
  {{ component('partials/sectionHeader.njk', args) }}
  <div class="flex flex-col self-center align-center text-center text-black md:flex-row md:justify-center py-4 md:flex-wrap">
    {%- for item in params.items -%}
      <div class="mx-8 lg:mx-12 py-4 flex flex-col self-center md:self-start rounded md:w-40 lg:w-1/5 items-center">
        {% if item.data.pageLink %}
            <a href="{{item.data.pageLink}}"><img style="width:270px" src="{{item.data.path}}"/></a>
        {% else %}
            <img style="width:270px;" src="{{item.data.path}}"/>
        {% endif %}
        <h4 class="self-center text-xl lg:text-2xl mb-2 mt-4">{{item.templateContent | safe}}</h4>
      </div>
    {%- endfor -%}
  </div>
</div>
