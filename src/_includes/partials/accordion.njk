<div class="flex flex-col items-left mt-10 bg-gray-300 {{params.data.backgroundColor}} rounded-md mx-4 md:mx-0">
    <p class="text-black text-2xl md:text-3xl px-8 pt-8 pb-4">{{params.data.title}}</p>
    <ul class="shadow-box pb-6">
        {% for accordionItem in params.items %}
            <li x-data="{selected:null}">
                <button type="button" class="text-black pt-6 px-8 text-left w-full outline-none" @click="selected !== 1 ? selected = 1 : selected = null">
                    <p class="text-lg md:text-xl">{{accordionItem.data.title}}</p>
                </button>
                <div class="bg-gray-100 {{params.data.secondaryColor}}  w-full px-8 relative overflow-hidden transition-all max-h-0.5 duration-700" x-ref="container1" x-bind:style="selected == 1 ? 'max-height: ' + $refs.container1.scrollHeight + 'px' : ''">
                    <div class="py-4 md:text-lg">{{accordionItem.templateContent | safe}}</div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
