 <section class="flex flex-col" >
    {% include "components/standardHeader.njk" %}
    <div style="background-image:url({{heroImage}});" class="flex flex-col bg-no-repeat bg-center bg-cover h-screen-3/5 md:h-screen-4/5">
        <div class="flex flex-row">
            <div class="flex justify-start bg-white bg-opacity-80 rounded-r-full mt-10 lg:mt-20">
              <p class="text-2xl md:text-4xl lg:text-6xl 2xl:text-7xl text-black py-3 lg:py-4 xl:py-6 pr-8 pl-12 sm:pl-8 md:pl-16 2xl:pl-24">{{heroTitle}}</p>
            </div>
        </div>
        
        {% block heroImageMainText %}
        <div class="flex w-1/2 sm:w-1/3 bg-white bg-opacity-80 mt-12 lg:mt-20 self-end mr-4 sm:mr-8 lg:mr-20 2xl:mr-52 rounded-lg">
          <p class="text-sm sm:text-md md:text-xl 2xl:text-2xl text-black p-4 md:p-5 text-justify">{{heroImageMainText}}</p>
        </div>
        {% endblock %}
        <div class="flex w-3/5 sm:w-1/3 md:w-1/3 mt-auto mb-4 self-end bg-white bg-opacity-80 rounded-l-full">
          <p class="text-sm sm:text-md md:text-xl text-black pl-6 md:pb-1">{{heroImageSubTitle}}</p>
        </div>
    </div>
</section>
